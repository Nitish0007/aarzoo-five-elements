<div class="form-container">
    <div class="form-inner-container">

        <%= form_with do |form|%>

            <h3>Admin Log In</h3>
            <div class="field">
                <%= form.label :email %>
                <%= form.text_field :email %>
            </div>


            <div class="field">
                <%= form.label :password %>
                <%= form.password_field :password %>
            </div>
                    <%= tag.span form.submit 'Login', class: 'submit_btn' %>
        <% end %>

        <div class="image_container">
            <%= image_tag 'https://images.unsplash.com/photo-1676487030430-6cad55c86e8c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwyNjJ8fHxlbnwwfHx8fA%3D%3D&auto=format&fit=crop&w=700&q=60' %>
        </div>
    </div>
</div>